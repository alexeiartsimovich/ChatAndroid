<resources xmlns:tools="http://schemas.android.com/tools">
    <color name="action_mode_background">#563CCC</color>

    <style name="Theme.Chat.GPT" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:statusBarColor">#CC8179CA</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">#DF2868</item>
        <item name="colorPrimaryVariant">#CD1C6E</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">#3C64CC</item>
        <item name="colorSecondaryVariant">#563CCC</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#4A4A4A</item>
        <item name="actionModeStyle">@style/Theme.Chat.GPT.ActionMode</item>

        <item name="chatBackground">@drawable/bg_chat_gradient</item>
        <item name="chatOnBackgroundColor">@color/white</item>
        <item name="chatInputFieldTint">?colorSecondary</item>
        <item name="chatSendActionTint">?colorSecondary</item>
        <item name="chatProgressTint">?colorSecondary</item>
        <item name="messageForegroundColor">#3E3E3E</item>
        <item name="messageBackground">@drawable/bg_message</item>
        <item name="messageBackgroundColor">@color/white</item>
        <item name="userMessageBackground">@drawable/bg_user_message</item>
        <item name="userMessageBackgroundColor">@color/white</item>
    </style>

    <style name="Theme.Chat.GPT.Splash" parent="Theme.MaterialComponents.Light">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:statusBarColor">#00000000</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <style name="Theme.Chat.GPT.ActionMode" parent="Widget.MaterialComponents.ActionMode">
        <item name="background">@color/action_mode_background</item>
        <item name="backgroundSplit">@null</item>
    </style>
</resources>