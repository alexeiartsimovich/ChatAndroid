<resources xmlns:tools="http://schemas.android.com/tools">
    <color name="action_mode_background">#563CCC</color>

    <style name="Theme.Chat" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:statusBarColor">?colorPrimary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionBarSize">52dp</item>
        <item name="colorPrimary">#3D3FA8</item>
        <item name="colorPrimaryVariant">#2F63BC</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">#783CCC</item>
        <item name="colorSecondaryVariant">#563CCC</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#4A4A4A</item>
        <item name="actionModeStyle">@style/Theme.Chat.ActionMode</item>
        <item name="materialAlertDialogTheme">@style/Theme.Chat.MaterialAlertDialog</item>
        <item name="chipStyle">@style/Theme.Chat.Chip.Action</item>

        <item name="chatBackground">@drawable/bg_chat_gradient</item>
        <item name="chatOnBackgroundColor">@color/white</item>
        <item name="chatInputFieldTintActive">?colorPrimary</item>
        <item name="chatInputFieldTintInactive">#E8E8E8</item>
        <item name="chatSendActionTint">?colorPrimary</item>
        <item name="chatProgressTint">?colorPrimary</item>
        <item name="messageForegroundColor">#3E3E3E</item>
        <item name="messageBackground">@drawable/bg_message</item>
        <item name="messageBackgroundColor">@color/white</item>
        <item name="userMessageBackground">@drawable/bg_user_message</item>
        <item name="userMessageBackgroundColor">@color/white</item>
    </style>

    <style name="Theme.Chat.Splash" parent="Theme.MaterialComponents.Light">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:statusBarColor">#00000000</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <style name="Theme.Chat.ActionMode" parent="Widget.MaterialComponents.ActionMode">
        <item name="background">@color/action_mode_background</item>
        <item name="backgroundSplit">@null</item>
    </style>

    <style name="Theme.Chat.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialAlertDialog.Rounded</item>
        <item name="android:backgroundDimAmount">0.32</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialAlertDialog.Rounded" parent="">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Theme.Chat.Chip.Action" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">?colorPrimaryVariant</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textSize">17sp</item>
        <item name="chipCornerRadius">16dp</item>
    </style>
</resources>